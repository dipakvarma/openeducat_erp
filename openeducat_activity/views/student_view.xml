<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="activity_smart_button" model="ir.ui.view">
            <field name="name">activity.smart.buttons</field>
            <field name="model">op.student</field>
            <field name="inherit_id" ref="openeducat_core.view_op_student_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='image_1920']" position="before">
                    <div class="btn-group-lg" style="opacity:0.8;">
                    <button type="object"
                            class="text-center oe_right"
                            icon="fa-book"
                            name="get_activity">
                        <field name="activity_count"/> Activity
                    </button></div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
